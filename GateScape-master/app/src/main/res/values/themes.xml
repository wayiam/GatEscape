<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GateScape" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="color">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#00000000</item>
<!--        &lt;!&ndash; Status bar color. &ndash;&gt;-->
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions" >true</item>

    </style>

    <style name="Theme.GateScape." parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.GateScape.ActionBarStyle</item>
    </style>

    <style name="Theme.GateScape.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Theme.GateScape.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.GateScape.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BackGroundImageView">
        <item name="android:alpha">0.5</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/req_bg</item>
    </style>
</resources>